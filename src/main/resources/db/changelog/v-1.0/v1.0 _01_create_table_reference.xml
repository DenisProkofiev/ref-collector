<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="create_table_reference" author="Prokofev_Denis">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="reference"/>
      </not>
    </preConditions>

    <createTable tableName="reference">
      <column name="reference_id" type="bigint">
        <constraints primaryKeyName="true" nullable="false"/>
      </column>
      <column name="name" type="text"/>
      <column name="url" type="text"/>
      <column name="description" type="text"/>
      <column name="create_date" type="timestamp"/>
    </createTable>
  </changeSet>

</databaseChangeLog>